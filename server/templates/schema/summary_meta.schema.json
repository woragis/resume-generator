{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Summary and Meta",
  "type": "object",
  "properties": {
    "summary": {
      "type": "string",
      "minLength": 80,
      "maxLength": 220
    },
    "meta": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "headline": { "type": "string" },
        "contact": {
          "type": "object",
          "properties": {
            "email": { "type": "string", "format": "email" },
            "location": { "type": "string" }
          }
        },
        "social_links": {
          "type": "object",
          "additionalProperties": { "type": "string", "format": "uri" }
        }
      }
    }
  },
  "required": ["summary", "meta"]
}
